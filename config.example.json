    {
      "name": "COPY_ENV",
      "command": "cp .env.example .env",
      "color": "red-1",
      "runIfNotCloned": false,
      "runIfRunStatusIs": [
        "STOPPED",
        "RUNNING",
        "PENDING"
      ],
      "icon": "file_copy"
    },
    {
      "name": "LOG_HELLO",
      "command": "echo \"Hello from %{service}\"",
      "color": "purple-5",
      "runIfNotCloned": false,
      "runIfRunStatusIs": [
        "STOPPED",
        "RUNNING",
        "PENDING"
      ],
      "icon": "campaign"
    },
    {
      "name": "RESET_DATABASE",
      "command": "%{npmCommand} run db:reset",
      "color": "pink-8",
