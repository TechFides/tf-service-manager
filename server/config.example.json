{
  "services_directory": "../../../services",
  "services": [
    {
      "name": "SERVICE_1",
      "npmRunLifecycle": "dev",
      "gitUrl": "gitlab.com/organization/service_1",
      "port": 3010,
      "appUrlSuffix": "/api-docs",
      "color": "teal-9",
      "genericTasks": [
        "COPY_ENV",
        "PRINT_NAME"
      ],
      "tasks": [
        {
          "name": "COPY_ENV_PROD",
          "command": "cp .env.prod .env",
          "color": "red-1",
          "runIfNotCloned": false,
          "icon": "priority_high"
        }
      ]
    },
    {
      "name": "SERVICE_2",
      "npmRunLifecycle": "dev",
      "gitUrl": "gitlab.com/organization/service_2",
      "port": 8012,
      "appUrlSuffix": "",
      "color": "green-9",
      "genericTasks": [
        "COPY_ENV"
      ],
      "tasks": [
        {
          "name": "COPY_ENV_PROD",
          "command": "cp .prod.env .env",
          "color": "red-1",
          "runIfNotCloned": false,
          "icon": "priority_high"
        }
      ]
    },
    {
      "name": "SERVICE_3",
      "npmRunLifecycle": "dev",
      "gitUrl": "gitlab.com/organization/service_3",
      "port": 3011,
      "appUrlSuffix": "/swagger",
      "color": "purple-9",
      "genericTasks": [
        "COPY_ENV"
      ]
    }
  ],
  "generic_tasks": [
    {
      "name": "COPY_ENV",
      "command": "cp .env.example .env",
      "color": "red-1",
      "runIfNotCloned": false,
      "icon": "file_copy"
    },
    {
      "name": "PRINT_NAME",
      "command": "echo \"Hello, I am %{service}\"",
      "color": "red-1",
      "runIfNotCloned": false,
      "icon": "person"
    }
  ]
}
